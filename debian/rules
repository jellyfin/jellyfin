#! /usr/bin/make -f
CONFIG := Release
TERM := xterm
SHELL := /bin/bash
export DH_VERBOSE=1
export DOTNET_CLI_TELEMETRY_OPTOUT=1

%:
	dh $@

# disable "make check"
override_dh_auto_test:

# disable stripping debugging symbols
override_dh_clistrip:

override_dh_auto_build:
	dotnet publish MediaBrowser.Server.Mono/EmbyServer.csproj --configuration $(CONFIG) --output='$(CURDIR)/usr/lib/jellyfin/bin' --self-contained --runtime linux-x64

override_dh_auto_clean:
	dotnet clean -maxcpucount:1 --configuration $(CONFIG) || true
	rm -rf '$(CURDIR)/usr'
